{
	"name": "adf_bronze_csv",
	"properties": {
		"activities": [
			{
				"name": "lookup_parameter",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"dataset": {
						"referenceName": "dataset_parameter",
						"type": "DatasetReference",
						"parameters": {
							"container": "raw",
							"folder": "stage/parameter",
							"filename": "parameters.csv"
						}
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "ForEach1",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "lookup_parameter",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('lookup_parameter').output.value",
						"type": "Expression"
					},
					"batchCount": 5,
					"activities": [
						{
							"name": "If Condition",
							"type": "IfCondition",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"expression": {
									"value": "@equals(item().statusProcess,'1')",
									"type": "Expression"
								},
								"ifTrueActivities": [
									{
										"name": "Notebook",
										"type": "DatabricksNotebook",
										"dependsOn": [],
										"policy": {
											"timeout": "7.00:00:00",
											"retry": 0,
											"retryIntervalInSeconds": 30,
											"secureOutput": false,
											"secureInput": false
										},
										"userProperties": [],
										"typeProperties": {
											"notebookPath": "/Users/vvalenti@emeal.nttdata.com/Beca/csv_ingestion",
											"baseParameters": {
												"file_name": {
													"value": "@item().fileName",
													"type": "Expression"
												},
												"table_name": {
													"value": "@concat(item().table,'_victoria')",
													"type": "Expression"
												},
												"database": {
													"value": "@item().database",
													"type": "Expression"
												},
												"delimiter": {
													"value": "@item().delimiter",
													"type": "Expression"
												}
											}
										},
										"linkedServiceName": {
											"referenceName": "ls_databricks_beca",
											"type": "LinkedServiceReference"
										}
									}
								]
							}
						}
					]
				}
			}
		],
		"folder": {
			"name": "bronze"
		},
		"annotations": []
	}
}